<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="AppTheme.Base">
        <item name="listChoiceBackgroundIndicator">@drawable/pre_lollipop_sel_list</item>
        <item name="android:listChoiceBackgroundIndicator">?listChoiceBackgroundIndicator</item>
        <item name="selectableItemBackground">@drawable/pre_lollipop_sel_item_bg</item>
        <item name="android:selectableItemBackground">?selectableItemBackground</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@color/window_bg</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/toolbar_control_normal</item>
        <item name="colorControlActivated">@color/toolbar_control_activated</item>
    </style>

    <style name="PopupTheme" parent="ThemeOverlay.AppCompat.Light" />

</resources>